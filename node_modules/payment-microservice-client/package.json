{
  "name": "payment-microservice-client",
  "version": "2.1.0",
  "description": "Package to create a socket interface with redis ready to connect to a microservice using payment-microservice package.",
  "main": "index.ts",
  "scripts": {
    "copy": "cp -rf  package.json README.md dist",
    "build": "rm -rf tsconfig.tsbuildinfo; tsc && npm run copy",
    "start": "tsc && node dist/index.ts",
    "lint": "eslint '*/**/*.{js,ts,tsx}' ",
    "dev": "NODE_ENV=development ts-node-dev --debug --respawn --transpileOnly ./src/index.ts",
    "publishPackage": "npm run build && cd dist && npm publish",
    "test": "jest",
    "test-dev": "NODE_ENV=development npx jest --watch",
    "test-coverage": "npm test -- --coverage --watchAll=false"
  },
  "keywords": [
    "payments",
    "microservice",
    "redis"
  ],
  "author": "Alberto Blanco | Binpar",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^27",
    "@types/node": "^16",
    "@typescript-eslint/eslint-plugin": "^4",
    "@typescript-eslint/parser": "^4",
    "babel-jest": "^27",
    "eslint": "^7",
    "eslint-config-airbnb-base": "^15",
    "eslint-config-airbnb-typescript": "^14",
    "eslint-config-prettier": "^8",
    "eslint-plugin-import": "^2",
    "eslint-plugin-jest": "^24",
    "eslint-plugin-promise": "^5",
    "jest": "^27",
    "jest-watch-typeahead": "^0.6.4",
    "standard-version": "^9.3.1",
    "ts-jest": "^27",
    "ts-node": "^10",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4"
  },
  "dependencies": {
    "@socket.io/redis-adapter": "^7.2.0",
    "express": "^4",
    "redis": "^4.2.0",
    "socket.io": "^4.5.1",
    "socket.io-client": "^4.5.1",
    "winston": "^3"
  }
}
